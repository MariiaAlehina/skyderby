%tr{'data-target': 'events--reference-points.point'}
  %td=form.text_field :name
  %td=form.number_field :latitude, step: '0.0000001', class: 'reference-point__latitude'
  %td=form.number_field :longitude, step: '0.0000001', class: 'reference-point__longitude'
  %td
    = form.hidden_field :id
    = form.hidden_field :_destroy
    %a.event-reference-points__delete{'data-action': 'click->events--reference-points#remove'}
      %i.fa.fa-times
