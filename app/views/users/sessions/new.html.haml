.content-block
  %h2= t 'devise.sessions.new.sign_in'

  = form_for(resource, as: resource_name, url: session_path(resource_name), html: { 'data-controller': 'users--sign-in' }) do |f|
    .form-group
      = f.email_field :email, autofocus: true , class: 'form-control input-lg', placeholder: 'Email', required: true

    .form-group
      = f.password_field :password, autocomplete: 'off', class: 'form-control input-lg', placeholder: 'Password', required: true
      = link_to t('devise.shared.links.forgot_your_password'), new_password_path(resource_name), class: 'secondary-text'

    .form-group
      = f.hidden_field :remember_me, value: 1
      = f.submit t('devise.sessions.new.sign_in'), class: 'btn btn-primary'

    = link_to t('devise.shared.links.sign_up'), new_registration_path(resource_name), class: 'btn'

    %p.secondary-text= t('general.or')

    = link_to t('devise.shared.links.sign_in_with_provider', provider: 'Facebook'), omniauth_authorize_path(resource_name, :facebook), class: 'btn btn-facebook'
